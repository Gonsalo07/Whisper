<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_user_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PancracioGolondrina#0001"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:background="#e4d6f6"
                android:text="Infraestructura"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:paddingHorizontal="10dp"
                android:text="Hace 16 minutos"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se rompio una vereda en los Santos"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hay un huevo grande en la avenida principal de los angamos, porfavor si alguien podria venir a repararlo, obstruye demasiado el transito y congestiona a las motociletas cacheras de JAJAJA, cabro quien lea esto. solo todo ERICK"
            android:textSize="15sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av. Los Robles, Los Jasmines"
                android:textSize="13sp"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_reporte_bache"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginHorizontal="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cornerRadius="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ABABAB"
                android:text="Aporta"/>

            <Button
                android:layout_marginHorizontal="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cornerRadius="0dp"
                android:backgroundTint="#ABABAB"
                android:layout_height="wrap_content"
                android:text="Confusa"/>

            <Button
                android:layout_marginHorizontal="1dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                app:cornerRadius="0dp"
                android:backgroundTint="#ABABAB"
                android:layout_height="wrap_content"
                android:text="Cuestionable"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>