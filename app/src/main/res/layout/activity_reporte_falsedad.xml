<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/btnVolverPublicaciones"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back"
            app:tint="@color/primary_color"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reportar Contenido"
            android:textSize="28sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayúdanos a mantener la comunidad segura informando sobre denuncias falsas o inapropiadas."
            android:alpha="0.7"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:text="Motivo del reporte"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <Spinner
                android:id="@+id/spinnerMotivo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Descripción detallada"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <EditText
                android:id="@+id/etDescripcionReporte"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Describe la situación con detalles..."
                android:padding="16dp"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEnviarReporte"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="ENVIAR REPORTE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverMenuDenuncias"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp"
            app:iconTint="@android:color/white"
            android:backgroundTint="#00D1A0"
            app:cornerRadius="28dp"
            app:elevation="4dp"
            android:layout_margin="16dp" />

    </LinearLayout>
</ScrollView>